<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="cz.kohlicek.waresys.ui.account.AccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/form_horizontal_padding"
        android:paddingRight="@dimen/form_horizontal_padding">

        <TextView
            android:id="@+id/label_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/form_row_vertical_margin"
            android:text="@string/account_form_fullname"
            android:textSize="@dimen/form_label_text" />

        <TextView
            android:id="@+id/account_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/form_row_vertical_margin"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/form_value_text" />


        <TextView
            android:id="@+id/label_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/form_row_vertical_margin"
            android:text="@string/account_form_username"
            android:textSize="@dimen/form_label_text" />

        <TextView
            android:id="@+id/account_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/form_row_vertical_margin"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/form_value_text" />


        <TextView
            android:id="@+id/label_roles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/form_row_vertical_margin"
            android:text="@string/account_form_roles"
            android:textSize="@dimen/form_label_text" />

        <TextView
            android:id="@+id/account_roles"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/form_row_vertical_margin"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="@dimen/form_value_text" />

    </LinearLayout>
</ScrollView>