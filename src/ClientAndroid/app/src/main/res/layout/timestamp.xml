<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:id="@+id/layout_timestamp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/text_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/timestamp_created"
            android:textSize="@dimen/card_sub_text" />

        <TextView
            android:id="@+id/text_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/text_created"
            android:text="@string/timestamp_updated"
            android:textSize="@dimen/card_sub_text" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_timestamp_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignTop="@+id/layout_timestamp_text"
        android:layout_marginStart="@dimen/card_space_horizontal_margin"
        android:layout_toEndOf="@+id/layout_timestamp_text">

        <TextView
            android:id="@+id/data_created"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="1.1.2000 10:00"
            android:textSize="@dimen/card_sub_text" />

        <TextView
            android:id="@+id/data_updated"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/data_created"
            android:text="1.1.2000 10:01"
            android:textSize="@dimen/card_sub_text" />

    </RelativeLayout>

</RelativeLayout>