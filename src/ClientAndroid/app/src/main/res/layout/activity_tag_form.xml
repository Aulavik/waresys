<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    tools:context="cz.kohlicek.bpini.ui.tag.TagFormActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingLeft="@dimen/form_horizontal_padding"
        android:paddingRight="@dimen/form_horizontal_padding">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_uid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_input_layout_vertical_margin"
            android:layout_marginTop="@dimen/text_input_layout_vertical_margin">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_uid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tag_form_input_uid"
                android:inputType="textPersonName" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_input_layout_vertical_margin"
            android:layout_marginTop="@dimen/text_input_layout_vertical_margin"
            app:passwordToggleEnabled="true">


            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/tag_form_input_type"
                android:text="AutoCompleteTextView" />


        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/layout_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_input_layout_vertical_margin"
            android:layout_marginTop="@dimen/text_input_layout_vertical_margin">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/input_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/tag_form_input_type"
                android:inputType="textPersonName" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>
</ScrollView>